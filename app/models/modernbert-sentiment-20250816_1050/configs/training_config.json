{
  "model_name": "answerdotai/ModernBERT-base",
  "learning_rate": 2e-05,
  "train_batch_size": 16,
  "eval_batch_size": 32,
  "num_epochs": 12,
  "warmup_ratio": 0.1,
  "weight_decay": 0.01,
  "gradient_accumulation_steps": 2,
  "max_grad_norm": 1.0,
  "fp16": true,
  "dataloader_num_workers": 2,
  "save_strategy": "epoch",
  "eval_strategy": "epoch",
  "logging_steps": 100,
  "save_total_limit": 2,
  "load_best_model_at_end": true,
  "metric_for_best_model": "eval_roc_auc",
  "greater_is_better": true,
  "seed": 42
}