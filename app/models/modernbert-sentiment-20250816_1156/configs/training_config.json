{
  "model_name": "answerdotai/ModernBERT-base",
  "learning_rate": 2e-05,
  "train_batch_size": 64,
  "eval_batch_size": 128,
  "num_epochs": 30,
  "warmup_ratio": 0.06,
  "weight_decay": 0.01,
  "gradient_accumulation_steps": 1,
  "max_grad_norm": 1.0,
  "fp16": false,
  "bf16": true,
  "dataloader_num_workers": 4,
  "optim": "adamw_torch_fused",
  "save_strategy": "epoch",
  "eval_strategy": "epoch",
  "logging_steps": 100,
  "save_total_limit": 2,
  "load_best_model_at_end": true,
  "metric_for_best_model": "eval_roc_auc",
  "greater_is_better": true,
  "seed": 42
}